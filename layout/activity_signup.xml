<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ss"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/lightBlue"
    android:gravity="center_horizontal"
    android:orientation="vertical"


    tools:context="app.com.roadhelper.SignupActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ImageView       android:layout_width="match_parent"
        android:layout_height="180dp"

        android:paddingTop="60dp"
        android:src="@drawable/helper_logo_full"/>


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"



        android:layout_marginTop="40px"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/colorAccentLightBlue"
            android:orientation="vertical"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/email_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.2"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:text="Name : "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:inputType="textEmailAddress"
                        android:background="#fff"
                        android:nextFocusLeft="@id/ss"
                        android:textSize="16sp"
                        android:id="@+id/name"
                        android:gravity="center_vertical"
                        android:textAlignment="gravity"
                        android:padding="5dp"
                        android:hint="Enter your name.."
                        android:layout_height="40dp"
                        android:layout_weight="0.8"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.2"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:text="Email : "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:inputType="textEmailAddress"
                        android:background="#fff"
                        android:nextFocusLeft="@id/ss"
                        android:textSize="16sp"
                        android:id="@+id/email"
                        android:gravity="center_vertical"
                        android:textAlignment="gravity"
                        android:padding="5dp"
                        android:hint="Enter your email.."
                        android:layout_height="40dp"
                        android:layout_weight="0.8"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.2"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:text="Phone : "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:background="#fff"
                        android:textSize="16sp"
                        android:inputType="number"

                        android:id="@+id/phone"
                        android:gravity="center_vertical"
                        android:textAlignment="gravity"
                        android:padding="5dp"
                        android:hint="Enter your phone.."
                        android:layout_height="40dp"
                        android:layout_weight="0.8"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1.2"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:text="Password : "/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:background="#fff"
                        android:textSize="16sp"

                        android:inputType="textPassword"
                        android:id="@+id/password"
                        android:gravity="center_vertical"
                        android:textAlignment="gravity"
                        android:padding="5dp"
                        android:hint="Enter your password.."
                        android:layout_height="40dp"
                        android:layout_weight="0.8"/>

                </LinearLayout>






            </LinearLayout>




            <Button
                android:id="@+id/go_signup"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:background="#a7e0a5"
                android:layout_margin="20dp"
                android:textColor="#365c7b"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:textSize="18sp"
                android:text="Create account"
                android:textStyle="bold" />
            <!--<Button-->
                <!--android:id="@+id/go_login"-->
                <!--style="?android:textAppearanceSmall"-->
                <!--android:layout_width="match_parent"-->
                <!--android:background="#a7e0a5"-->
                <!--android:layout_margin="20dp"-->
                <!--android:textColor="#365c7b"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="50dp"-->
                <!--android:textSize="18sp"-->
                <!--android:text="Already have an account ?"-->
                <!--android:textStyle="bold" />-->

        </LinearLayout>
    </ScrollView>
</LinearLayout>
